<div class="container">
  <div class="page-header">
    <h1>Work in progress Metrics</h1>
  </div>

  <p class="lead">This is a summary view of the work currently in progress within Innovation</p>

  <div class="panel panel-default">
    <!-- Default panel contents -->
    <div class="panel-heading">
      <h3 class="panel-title">There are <strong>{{cardsInProgress.length}}</strong> items currently being worked on in this period</h3>
    </div>

    <ul class="list-group">
      {{#each cardsInProgress as |card|}}
      <li class="list-group-item">
        <ul class="list-inline pull-right">
          {{#each card.labels as |label|}}
          <li><span class="label label-default" style="background-color:{{label.color}}">{{label.name}}</span></li>
          {{/each}}
        </ul>
        <h4 class="list-group-item-heading">{{card.name}}</h4>
      </li>
      {{/each}}
    </ul>
  </div>

  <div class="row">
    <div class="col-sm-6">
      <div class="panel panel-default">
        <!-- Default panel contents -->
        <div class="panel-heading">
          <h3 class="panel-title">Types of activities being worked on</h3>
        </div>

        <ul class="list-group">
          {{#each cardsByLabel as |value key|}}
          <li class="list-group-item"><span class="badge badge-default">{{value.length}}</span> {{key}}</li>
          {{/each}}
        </ul>
      </div>
    </div>

    <div class="col-sm-6">
      <div class="panel panel-default">
        <!-- Default panel contents -->
        <div class="panel-heading">
          <h3 class="panel-title">Topics being investigated in this period</h3>
        </div>

        <ul class="list-group">
          {{#each cardsByLabel as |value key|}}
          <li class="list-group-item"><span class="badge badge-default">{{value.length}}</span> {{key}}</li>
          {{/each}}
        </ul>
      </div>
    </div>
  </div>

  <div class="panel panel-default">
    <!-- Default panel contents -->
    <div class="panel-heading">
      <h3 class="panel-title">Length of time items will have been worked on in this period</h3>
    </div>

    <ul class="list-group">
      {{#each cardsTimeInList as |time|}}
      <li class="list-group-item"><span class="badge badge-default">{{time.timeInList}}</span> {{time.name}}</li>
      {{/each}}
    </ul>
  </div>

  <div class="panel panel-default">
    <!-- Default panel contents -->
    <div class="panel-heading">
      <h3 class="panel-title">Age of items being worked on</h3>
    </div>

    <ul class="list-group">
      {{#each cardsTimeInList as |time|}}
      <li class="list-group-item"><span class="badge badge-default">{{time.age}}</span> {{time.name}}</li>
      {{/each}}
    </ul>
  </div>

</div>
